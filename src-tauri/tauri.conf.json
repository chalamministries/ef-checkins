{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "tauri build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "EF Checkins",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true,
        "create": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["dmg", "deb", "msi"],
      "identifier": "com.elevationfitness.checkins",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "windows": []
  }
}